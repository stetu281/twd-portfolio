{
	"version": 3,
	"$schema": "https://schemas.wp.org/wp/6.6/theme.json",
	"settings": {
		"appearanceTools": true,
		"layout": {
			"contentSize": "840px",
			"wideSize": "2000px"
		},
		"custom": {
			"line-height": {
				"paragraph": 1.5,
				"heading": 1.2
			}
		},
		"spacing": {
			"units": ["%", "px", "em", "rem", "vh", "vw"],
			"blockGap": false
		},
		"color": {
			"defaultPalette": false,
			"defaultDuotone": false,
			"defaultGradients": false,
			"palette": [
				{
					"slug": "white",
					"color": "#ffffff",
					"name": "Weiss"
				},
				{
					"slug": "black",
					"color": "#000000",
					"name": "Schwarz"
				},
				{
					"slug": "blue",
					"color": "#6D2ED9",
					"name": "Blau-Violett"
				},
				{
					"slug": "font-gray",
					"color": "#9b9b9b",
					"name": "Paragraph Grau"
				}
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "\"Poppins\", sans-serif",
					"slug": "poppins",
					"fontFace": [
						{
							"fontFamily": "Poppins",
							"fontStyle": "normal",
							"fontWeight": "300",
							"src": ["file:./assets/fonts/Poppins-Light.woff2"]
						},
						{
							"fontFamily": "Poppins",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": ["file:./assets/fonts/Poppins-Regular.woff2"]
						},
						{
							"fontFamily": "Poppins",
							"fontStyle": "italic",
							"fontWeight": "400",
							"src": ["file:./assets/fonts/Poppins-Italic.woff2"]
						},
						{
							"fontFamily": "Poppins",
							"fontStyle": "normal",
							"fontWeight": "600",
							"src": [
								"file:./assets/fonts/Poppins-SemiBold.woff2"
							]
						},
						{
							"fontFamily": "Poppins",
							"fontStyle": "normal",
							"fontWeight": "800",
							"src": [
								"file:./assets/fonts/Poppins-ExtraBold.woff2"
							]
						},
						{
							"fontFamily": "Poppins",
							"fontStyle": "normal",
							"fontWeight": "900",
							"src": ["file:./assets/fonts/Poppins-Black.woff2"]
						}
					]
				},
				{
					"fontFamily": "\"Orbitron\", sans-serif",
					"name": "Orbitron",
					"slug": "orbitron",
					"fontFace": [
						{
							"fontFamily": "Orbitron",
							"fontStyle": "normal",
							"fontWeight": "500",
							"src": ["file:./assets/fonts/Orbitron-Medium.ttf"]
						}
					]
				}
			]
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"color": {
			"text": "var(--wp--preset--color--white)"
		},
		"blocks": {
			"core/paragraph": {
				"color": {
					"text": "var(--wp--preset--color--font-gray)"
				}
			}
		},
		"spacing": {
			"padding": {
				"top": "0px",
				"right": "2rem",
				"bottom": "0px",
				"left": "2rem"
			},
			"margin": {
				"top": "0px",
				"right": "0px",
				"bottom": "0px",
				"left": "0px"
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--poppins)",
			"fontSize": "var(--wp--preset--font-size--regular)",
			"fontWeight": "400",
			"lineHeight": "1"
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header"
		},
		{
			"area": "footer",
			"name": "footer"
		}
	]
}
