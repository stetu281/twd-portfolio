{
	"version": 3,
	"$schema": "https://schemas.wp.org/wp/6.6/theme.json",
	"settings": {
		"appearanceTools": true,
		"layout": {
			"contentSize": "840px",
			"wideSize": "2000px"
		},
		"custom": {
			"line-height": {
				"paragraph": 1.5,
				"heading": 1.2
			}
		},
		"spacing": {
			"units": ["%", "px", "em", "rem", "vh", "vw"],
			"blockGap": true,
			"spacingScale": {
				"operator": "*",
				"increment": 1.5,
				"steps": 10,
				"mediumStep": 1.5,
				"unit": "rem"
			}
		},
		"color": {
			"defaultPalette": false,
			"defaultDuotone": false,
			"defaultGradients": false,
			"palette": [
				{
					"slug": "white",
					"color": "#ffffff",
					"name": "Weiss"
				},
				{
					"slug": "black",
					"color": "#000000",
					"name": "Schwarz"
				},
				{
					"slug": "black-light",
					"color": "#1F1F1F",
					"name": "Hintergrund Dunkel"
				},
				{
					"slug": "blue",
					"color": "#6D2ED9",
					"name": "Blau-Violett"
				},
				{
					"slug": "font-gray",
					"color": "#9b9b9b",
					"name": "Paragraph Grau"
				},
				{
					"slug": "yellow-light",
					"color": "#ffe19f",
					"name": "Gelb-Hell"
				}
			],
			"gradients": [
				{
					"slug": "purple-to-pink",
					"gradient": "linear-gradient(to right, #7d87e2, #f7beda)",
					"name": "Nach Rechts violett zu pink"
				}
			]
		},
		"typography": {
			"fluid": true,
			"fontFamilies": [
				{
					"fontFamily": "\"Poppins\", sans-serif",
					"slug": "poppins",
					"fontFace": [
						{
							"fontFamily": "Poppins",
							"fontStyle": "normal",
							"fontWeight": "300",
							"src": ["file:./assets/fonts/Poppins-Light.woff2"]
						},
						{
							"fontFamily": "Poppins",
							"fontStyle": "normal",
							"fontWeight": "400",
							"src": ["file:./assets/fonts/Poppins-Regular.woff2"]
						},
						{
							"fontFamily": "Poppins",
							"fontStyle": "italic",
							"fontWeight": "400",
							"src": ["file:./assets/fonts/Poppins-Italic.woff2"]
						},
						{
							"fontFamily": "Poppins",
							"fontStyle": "normal",
							"fontWeight": "600",
							"src": [
								"file:./assets/fonts/Poppins-SemiBold.woff2"
							]
						},
						{
							"fontFamily": "Poppins",
							"fontStyle": "normal",
							"fontWeight": "800",
							"src": [
								"file:./assets/fonts/Poppins-ExtraBold.woff2"
							]
						},
						{
							"fontFamily": "Poppins",
							"fontStyle": "normal",
							"fontWeight": "900",
							"src": ["file:./assets/fonts/Poppins-Black.woff2"]
						}
					]
				},
				{
					"fontFamily": "\"Orbitron\", sans-serif",
					"name": "Orbitron",
					"slug": "orbitron",
					"fontFace": [
						{
							"fontFamily": "Orbitron",
							"fontStyle": "normal",
							"fontWeight": "500",
							"src": ["file:./assets/fonts/Orbitron-Medium.ttf"]
						}
					]
				}
			],
			"fontSizes": [
				{
					"name": "base",
					"size": "1rem",
					"slug": "base"
				},
				{
					"name": "Small",
					"fluid": {
						"min": "0.875rem",
						"max": "1rem"
					},
					"size": "1rem",
					"slug": "small"
				},
				{
					"name": "Medium",
					"fluid": {
						"min": "1rem",
						"max": "1.125rem"
					},
					"size": "1rem",
					"slug": "medium"
				},
				{
					"name": "Large",
					"fluid": {
						"min": "1.75rem",
						"max": "1.875rem"
					},
					"size": "1.875rem",
					"slug": "large"
				},
				{
					"name": "Extra Large",
					"fluid": {
						"min": "1.875rem",
						"max": "2.25rem"
					},
					"size": "2.25rem",
					"slug": "x-large"
				},
				{
					"name": "Extra Extra Large",
					"fluid": {
						"min": "2.25rem",
						"max": "4rem"
					},
					"size": "4rem",
					"slug": "xx-large"
				},
				{
					"name": "Slider",
					"fluid": {
						"min": "3rem",
						"max": "7rem"
					},
					"size": "7rem",
					"slug": "slider"
				},
				{
					"name": "Hero",
					"fluid": {
						"min": "1.75rem",
						"max": "9.5rem"
					},
					"size": "9.5rem",
					"slug": "hero-title"
				},
				{
					"name": "Subtitle",
					"fluid": {
						"min": "1.125rem",
						"max": "1.5rem"
					},
					"size": "1.5rem",
					"slug": "subtitle"
				},
				{
					"name": "Paragraph",
					"fluid": {
						"min": "1.125rem",
						"max": "1.25rem"
					},
					"size": "1.25rem",
					"slug": "paragraph-base"
				},
				{
					"name": "Paragraph Large Screen",
					"fluid": {
						"min": "1.25rem",
						"max": "1.375rem"
					},
					"size": "1.375rem",
					"slug": "paragraph-large"
				},
				{
					"name": "Frontpage Work Title",
					"fluid": {
						"min": "2.25rem",
						"max": "17rem"
					},
					"size": "17rem",
					"slug": "fp-work-title"
				},
				{
					"name": "Portfolio Section Title",
					"fluid": {
						"min": "3.25rem",
						"max": "18rem"
					},
					"size": "18rem",
					"slug": "port-section-title"
				}
			]
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"color": {
			"text": "var(--wp--preset--color--white)"
		},
		"blocks": {
			"core/paragraph": {
				"color": {
					"text": "var(--wp--preset--color--font-gray)"
				}
			}
		},
		"spacing": {
			"padding": {
				"top": "0px",
				"right": "1.75rem",
				"bottom": "0px",
				"left": "1.75rem"
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--poppins)",
			"fontWeight": "400",
			"lineHeight": "1"
		}
	},
	"customTemplates": [
		{
			"name": "page-contact",
			"title": "Kontakt",
			"postTypes": ["page"]
		}
	],
	"templateParts": [
		{
			"area": "header",
			"name": "header"
		},
		{
			"area": "footer",
			"name": "footer"
		}
	]
}
